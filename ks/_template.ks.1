# SELinux enabled
selinux --enforcing
# Firewall enabled
firewall --enabled
# Keyboard layouts
keyboard --vckeymap=la-latin1 --xlayouts='latam'
# System language
lang es_MX.UTF-8
# Network information
#network  --bootproto=dhcp --device=eth0 --onboot=on --ipv6=off
#network  --hostname=ipa.ine.mx
network  --bootproto=dhcp --device=eth0 --onboot=on --nameserver=_DNS_ --hostname=_HOSTNAME_._DOMAIN_ --gateway=_DEFAULTGW_
